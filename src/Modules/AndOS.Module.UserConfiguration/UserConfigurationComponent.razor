@inherits BaseProgramComponent
@namespace AndOS.Module.UserConfiguration
@{
    base.BuildRenderTree(__builder);
}

<FluentTabs OnTabChange="HandleOnTabChange" ActiveTabId="general">
    <FluentTab Label="General" Id="general">
        <AndOS.Module.UserConfiguration.Components.General.GeneralComponent />
    </FluentTab>
    <FluentTab Label="Preferences" Id="preferences">
        <AndOS.Module.UserConfiguration.Components.Preferences.PreferencesComponent />
    </FluentTab>
    <FluentTab Label="Security" Id="security">
        <AndOS.Module.UserConfiguration.Components.Security.SecutiryComponent />
    </FluentTab>
    <FluentTab Label="Accounts" Id="accounts">
        <AndOS.Module.UserConfiguration.Components.Accounts.AccountsComponent />
    </FluentTab>
</FluentTabs>

@code {
    FluentTab changedto;

    private void HandleOnTabChange(FluentTab tab)
    {
        changedto = tab;
    }
}